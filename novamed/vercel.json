{
    "$schema": "https://openapi.vercel.sh/vercel.json",
    "version": 2,
    "outputDirectory": "public",
    "framework": null,

    "buildCommand": "npm install && npm run build && composer install && php artisan config:clear && php artisan migrate --force && php artisan db:seed --force",
    "installCommand": "npm install",

    "builds": [
        {
            "src": "api/index.php",
            "use": "vercel-php@0.7.4"
        },
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "public"
            }
        }
    ],

    "routes": [
        {
            "src": "/(.*)\\.(js|css|svg|png|jpg|jpeg|gif|ico|woff2?|ttf|eot|json|webp|map)$",
            "headers": {
                "cache-control": "public, max-age=31536000, immutable"
            },
            "dest": "/$1"
        },
        {
            "src": "/api/(.*)",
            "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS", "HEAD"],
            "dest": "/api/index.php"
        },
        {
            "src": "/(.*)",
            "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS", "HEAD"],
            "dest": "/api/index.php"
        }
    ],

    "env": {
        "APP_ENV": "production",
        "APP_DEBUG": "false",
        "APP_URL": "https://novamed-fhwbgfzi6-lector07-s-projects.vercel.app",

        "DB_CONNECTION": "pgsql",
        "DB_PORT": "5432",

        "APP_CONFIG_CACHE": "/tmp/config.php",
        "APP_EVENTS_CACHE": "/tmp/events.php",
        "APP_PACKAGES_CACHE": "/tmp/packages.php",
        "APP_ROUTES_CACHE": "/tmp/routes.php",
        "APP_SERVICES_CACHE": "/tmp/services.php",
        "VIEW_COMPILED_PATH": "/tmp/views",

        "CACHE_DRIVER": "array",
        "LOG_CHANNEL": "stderr",
        "SESSION_DRIVER": "cookie",
        "QUEUE_CONNECTION": "sync"
    }
}
